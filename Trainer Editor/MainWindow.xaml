<Window x:Class="Trainer_Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trainer_Editor"
        xmlns:UserControls="clr-namespace:Trainer_Editor.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <DockPanel VerticalAlignment="Top" Height="20">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem x:Name="MenuOpen" Header="_Open" Click="MenuOpen_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid HorizontalAlignment="Left" Margin="0,20,0,0" Width="260">
            <TextBox Text="" TextWrapping="Wrap" Height="40" VerticalAlignment="Top" TextChanged="TextBox_TextChanged"/>
            <ListBox x:Name="ListBox1" ItemsSource="{Binding Trainers}" SelectedItem="{Binding SelectedTrainer, Mode=OneWayToSource}" Margin="0,40,0,0" DisplayMemberPath="IndexName" SelectionChanged="ListBox_SelectionChanged" Background="{x:Null}" />
        </Grid>
        <StackPanel VerticalAlignment="Top" Orientation="Horizontal" Margin="260,20,0,0" Height="20">
            <StackPanel.Resources>
                <local:ComparisonConverter x:Key="ComparisonConverter"></local:ComparisonConverter>
            </StackPanel.Resources>
            <RadioButton Content="NoItemDefaultMoves   " HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TYPE.TrainerMonNoItemDefaultMoves}}"></RadioButton>
            <RadioButton Content="ItemDefaultMoves   " HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TYPE.TrainerMonItemDefaultMoves}}"></RadioButton>
            <RadioButton Content="NoItemCustomMoves   " HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TYPE.TrainerMonNoItemCustomMoves}}"></RadioButton>
            <RadioButton Content="ItemCustomMoves   " HorizontalAlignment="Center" VerticalAlignment="Top" IsChecked="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource ComparisonConverter}, ConverterParameter={x:Static local:TYPE.TrainerMonItemCustomMoves}}"></RadioButton>
        </StackPanel>
        <UserControls:PartyUserControl HorizontalAlignment="Left" Margin="260,0,0,0"></UserControls:PartyUserControl>
        <StackPanel Width="150" Height="100" HorizontalAlignment="Left" Margin="430,0,0,0">
            <StackPanel.Resources>
                <local:MovesEnabledCoverter x:Key="MovesEnabledConverter"></local:MovesEnabledCoverter>
            </StackPanel.Resources>
            <ComboBox Name="ComboBox_Move0" Tag="0" Height="25" Text="{Binding SelectedMon.Moves[0], Mode=TwoWay}" IsEditable="True" IsEnabled="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource MovesEnabledConverter}, Mode=OneWay}"></ComboBox>
            <ComboBox Name="ComboBox_Move1" Tag="1" Height="25" Text="{Binding SelectedMon.Moves[1], Mode=TwoWay}" IsEditable="True" IsEnabled="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource MovesEnabledConverter}, Mode=OneWay}"></ComboBox>
            <ComboBox Name="ComboBox_Move2" Tag="2" Height="25" Text="{Binding SelectedMon.Moves[2], Mode=TwoWay}" IsEditable="True" IsEnabled="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource MovesEnabledConverter}, Mode=OneWay}"></ComboBox>
            <ComboBox Name="ComboBox_Move3" Tag="3" Height="25" Text="{Binding SelectedMon.Moves[3], Mode=TwoWay}" IsEditable="True" IsEnabled="{Binding Path=SelectedTrainer.Party.Type, Converter={StaticResource MovesEnabledConverter}, Mode=OneWay}"></ComboBox>
        </StackPanel>

        <UserControls:LabeledTextBox LabelText="IV (0-255)" TextBoxText="{Binding SelectedMon.Iv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="350,200,0,0" Height="100" Width="100"></UserControls:LabeledTextBox>
        <Button Content="Button" HorizontalAlignment="Center" Height="91" Width="190" Click="Button_Click"/>

    </Grid>
</Window>
