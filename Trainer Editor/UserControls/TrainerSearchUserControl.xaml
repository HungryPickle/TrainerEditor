<UserControl x:Class="Trainer_Editor.UserControls.TrainerSearchUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trainer_Editor.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox x:Name="TextBox1"  Height="20" VerticalAlignment="Top" 
            TextChanged="TextBox_TextChanged" 
            PreviewKeyDown="TextBox_PreviewKeyDown"/>
        <ListBox x:Name="ListBox1" Margin="0,20,0,0"  
            ItemsSource="{Binding FilteredTrainers}" 
            SelectedItem="{Binding SelectedTrainer, Mode=OneWayToSource, UpdateSourceTrigger=Explicit}" 
            DisplayMemberPath="IndexName"
            SelectionChanged="ListBox_SelectionChanged"
            PreviewKeyDown="ListBox1_PreviewKeyDown"/>
    </Grid>
</UserControl>
