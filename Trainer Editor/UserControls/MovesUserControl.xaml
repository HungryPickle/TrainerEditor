<UserControl x:Class="Trainer_Editor.UserControls.MovesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trainer_Editor.UserControls"
             xmlns:global="clr-namespace:Trainer_Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="local:AutoCompleteTextBox">
                    <Setter Property="LabelVisibility" Value="Collapsed"/>
                    <Setter Property="ListSource" Value="{Binding Moves.List, Mode=OneWay}"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="Moveset"/>
            <local:AutoCompleteTextBox x:Name="move0" ListItem="{Binding SelectedMon.Moves[0], Mode=TwoWay}"/>
            <local:AutoCompleteTextBox x:Name="move1" ListItem="{Binding SelectedMon.Moves[1], Mode=TwoWay}"/>
            <local:AutoCompleteTextBox x:Name="move2" ListItem="{Binding SelectedMon.Moves[2], Mode=TwoWay}"/>
            <local:AutoCompleteTextBox x:Name="move3" ListItem="{Binding SelectedMon.Moves[3], Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
