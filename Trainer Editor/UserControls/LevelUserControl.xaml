<UserControl x:Class="Trainer_Editor.UserControls.LevelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trainer_Editor.UserControls"
             xmlns:global="clr-namespace:Trainer_Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Level" VerticalAlignment="Center">
        <Grid Margin="2,2,2,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <local:LabeledComboBox LabelContent="Offset" MinWidth="165" Tag="{x:Static global:Input.Custom}" Style="{StaticResource PartyType}"
                ItemsSource="{x:Static global:Mon.LvlOffsets}" SelectedItem="{Binding SelectedMon.LvlOffset, Mode=TwoWay}"/>
            <local:LabeledTextBox x:Name="lvlBox" LabelText="Lvl" Grid.Column="1" Margin="5,0,0,0"
                TextBoxText="{Binding SelectedMon.Lvl, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

        </Grid>
    </GroupBox>
</UserControl>
