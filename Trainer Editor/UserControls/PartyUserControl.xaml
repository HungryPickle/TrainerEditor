<UserControl x:Class="Trainer_Editor.UserControls.PartyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trainer_Editor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Width="150" Height="150">
            <ComboBox Name="ComboBox_Species0" Tag="0" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[0].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
            <ComboBox Name="ComboBox_Species1" Tag="1" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[1].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
            <ComboBox Name="ComboBox_Species2" Tag="2" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[2].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
            <ComboBox Name="ComboBox_Species3" Tag="3" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[3].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
            <ComboBox Name="ComboBox_Species4" Tag="4" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[4].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
            <ComboBox Name="ComboBox_Species5" Tag="5" Height="25" ItemsSource="{Binding Species, Mode=OneWay}" Text="{Binding SelectedTrainer.Party.MonList[5].Species, Mode=OneWay}" IsEditable="True"  TextBoxBase.TextChanged="ComboBox_Species_TextChanged" PreviewTextInput="ComboBox_Species_PreviewTextInput" DropDownClosed="ComboBox_Species_DropDownClosed" IsTextSearchCaseSensitive="True" GotFocus="ComboBox_Species_GotFocus"/>
        </StackPanel>
    </Grid>
</UserControl>
